@page
@model BullkeyWebRazor_Teamp.Pages.Categories.DeleteModel


<form method="post">
	 <input asp-for="Category.Id" hidden/> 
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete Category</h2>
			<br />
		</div>

		<div class="mb-3 row">
			<label asp-for="Category.Name"></label>
			<input asp-for="Category.Name" class="form-control" disabled />
		</div>

		<div class="mb-3 row">
			<label asp-for="Category.DisplayOrder"></label>
			<input asp-for="Category.DisplayOrder" class="form-control" disabled />
		</div>

		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-danger form-control">Delete</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-page="/Categories/index" class="btn btn-secondary btn-outline-dark form-control">Back</a>
			</div>
		</div>

	</div>
</form>
